{
    "name": "darod/php_serializer",
  
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Darod103",
            "email": "darod103@gmail.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^12.4",
        "friendsofphp/php-cs-fixer": "^3.88",
        "phpstan/phpstan": "^1.11"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "phpstan": "phpstan analyse -c phpstan.neon.dist"
    }
}
